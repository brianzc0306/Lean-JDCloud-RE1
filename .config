# 目标设备
CONFIG_TARGET_qualcommax=y
CONFIG_TARGET_qualcommax_ipq60xx=y
CONFIG_TARGET_qualcommax_ipq60xx_DEVICE_jdcloud_re-cs-07=y

# 禁用 fw3
# 取消 LEDE 默认的 firewall3 模块
# (注意：fw3 与 TurboACC 默认绑定，必须禁用)
# CONFIG_PACKAGE_firewall is not set
# CONFIG_PACKAGE_kmod-ipt-core is not set
# CONFIG_PACKAGE_iptables is not set
# CONFIG_PACKAGE_ip6tables is not set

# 启用 fw4 + nftables（LEDE不默认带，需显式启用）
CONFIG_PACKAGE_firewall4=y
CONFIG_PACKAGE_nftables=y
CONFIG_PACKAGE_nftables-json=y
CONFIG_PACKAGE_kmod-nft-core=y
CONFIG_PACKAGE_kmod-nft-fib=y
CONFIG_PACKAGE_kmod-nft-fullcone=y
CONFIG_PACKAGE_kmod-nft-nat=y
CONFIG_PACKAGE_kmod-nft-offload=y
CONFIG_PACKAGE_kmod-nft-socket=y
CONFIG_PACKAGE_kmod-nft-tproxy=y
CONFIG_PACKAGE_kmod-nf-flow=y
CONFIG_PACKAGE_kmod-nf-socket=y
CONFIG_PACKAGE_libnftnl=y

# nftables 的额外依赖（fw4需要）
CONFIG_PACKAGE_kmod-nf-log=y
CONFIG_PACKAGE_kmod-nf-reject=y

# NSS 硬加速（QSDK 驱动）
CONFIG_PACKAGE_kmod-qca-nss-drv=y
CONFIG_PACKAGE_kmod-qca-nss-ecm=y
CONFIG_PACKAGE_kmod-qca-nss-drv-qdisc=y
CONFIG_PACKAGE_kmod-qca-nss-gmac=y
CONFIG_PACKAGE_kmod-qca-nss-drv-pppoe=y
CONFIG_PACKAGE_kmod-qca-nss-drv-vlan-mgr=y
CONFIG_PACKAGE_kmod-qca-nss-drv-bridge-mgr=y
# 若使用 L2TP/IPSec 可启用：
# CONFIG_PACKAGE_kmod-qca-nss-drv-l2tpv2=y

# IPv6 支持完整启用
CONFIG_PACKAGE_ipv6helper=y
CONFIG_PACKAGE_dnsmasq-full=y
CONFIG_PACKAGE_odhcp6c=y
CONFIG_PACKAGE_odhcpd-ipv6only=y
CONFIG_PACKAGE_kmod-sit=y
CONFIG_PACKAGE_6in4=y
CONFIG_PACKAGE_kmod-iptunnel4=y

# 可选：IPv6 NAT64 场景
# CONFIG_PACKAGE_dns64=y
# CONFIG_PACKAGE_kmod-nf-nat6=y

# UPnP（支持 firewall4/nftables 的版本）
CONFIG_PACKAGE_luci-app-upnp=y
CONFIG_PACKAGE_miniupnpd-nftables=y

# 性能 & 系统工具
CONFIG_PACKAGE_autocore-arm=y
CONFIG_PACKAGE_cpufreq=y
CONFIG_PACKAGE_ethtool=y
CONFIG_PACKAGE_htop=y
CONFIG_PACKAGE_tcpdump=y
CONFIG_PACKAGE_bmon=y

# 其他底层模块
CONFIG_PACKAGE_jansson=y
CONFIG_PACKAGE_kmod-inet-diag=y
CONFIG_PACKAGE_kmod-lib-crc32c=y

# LUCI 插件
CONFIG_PACKAGE_luci-app-lucky=y
CONFIG_PACKAGE_luci-app-msd_lite=y
CONFIG_PACKAGE_luci-app-nikki=y
CONFIG_PACKAGE_luci-i18n-lucky-zh-cn=y
CONFIG_PACKAGE_luci-i18n-msd_lite-zh-cn=y
CONFIG_PACKAGE_luci-i18n-nikki-zh-cn=y

# 可选增强：
CONFIG_PACKAGE_luci-app-statistics=y
CONFIG_PACKAGE_luci-i18n-statistics-zh-cn=y
# CONFIG_PACKAGE_luci-app-nlbwmon is not set

# luci 主题
CONFIG_PACKAGE_luci-theme-argon=y

# 主程序
CONFIG_PACKAGE_lucky=y
CONFIG_PACKAGE_msd_lite=y
CONFIG_PACKAGE_nikki=y

# 工具
CONFIG_PACKAGE_yq=y

# 显式禁用冲突/多余模块
# CONFIG_PACKAGE_TURBOACC_INCLUDE_NO_FASTPATH is not set
# CONFIG_PACKAGE_TURBOACC_INCLUDE_SHORTCUT_FE_CM is not set
# CONFIG_PACKAGE_kmod-shortcut-fe is not set
# CONFIG_PACKAGE_kmod-shortcut-fe-cm is not set
